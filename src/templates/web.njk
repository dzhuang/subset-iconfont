<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="google" content="notranslate" />
    <title>{{ fontName }}</title>
    <style>
      :root {
          --{{ prefix }}-style-family: "{{ fontName }}";
          --{{ prefix }}-style: 100;
          --{{ prefix }}-display: block;
          --{{ prefix }}-border-color: blue;
          --{{ prefix }}-primary-color: blue;
          --{{ prefix }}-secondary-color: red;
      }

      * {
          margin: 0;
          padding: 0;
      }

      body {
          margin: 0;
          padding: 0;
          background: #fff;
          color: #222;
      }

      h1,
      h2,
      h3,
      p,
      div,
      blockquote,
      footer {
          font-family: "Helvetica Neue", Arial, sans-serif;
      }

      h1 {
          padding: 20px 20px 16px 20px;
          font-size: 26px;
          line-height: 26px;
          font-weight: normal;
          color: #FFF;
          background-color: #ef1a73;
      }

      h1 svg {
          vertical-align: middle;
          width: 26px;
          height: 26px;
          margin: 0 6px 4px 0;
      }

      h1 svg path {
          fill: #FFF;
      }

      h1 .version {
          font-size: 14px;
          background: #FFF;
          padding: 4px 10px;
          float: right;
          border-radius: 2px;
          margin: -3px 0 0 0;
          color: #666;
          font-weight: bold;
      }

      h1 .version::before {
          content: 'v';
      }

      h1 code {
          font-size: 20px;
          background: rgba(0, 0, 0, 0.5);
          padding: 4px 12px;
          border-radius: 3px;
          float: right;
          margin: -3px 10px 0 0;
          border: 1px solid transparent;
          cursor: pointer;
      }

      h1 code:hover {
          border: 1px solid #FFF;
      }

      h1 code svg {
          width: 24px;
          height: 24px;
          margin: -1px -4px 0 -2px
      }

      h2 {
          font-size: 18px;
          padding: 20px;
      }

      h2 small {
          color: #555;
          font-size: 0.8rem;
      }

      h2 small::before {
          content: '(';
      }

      h2 small::after {
          content: ')';
      }

      h2 span {
          position: relative;
      }

      h3 {
          font-size: 14px;
          padding: 10px 20px 0 20px;
          font-weight: bold;
      }

      p {
          padding: 10px 20px;
      }

      p code {
          display: inline-block;
          vertical-align: middle;
          background: #F1F1F1;
          padding: 3px 5px;
          border-radius: 3px;
          border: 1px solid #DDD;
      }

      p i.{{ prefix }} {
          vertical-align: middle;
          border-radius: 4px;
          display: inline-block;
      }

      p.note {
          color: #999;
          font-size: 14px;
          padding: 0 20px 5px 20px;
      }

      p.extras {
          margin-top: -0.5rem;
      }

      div.icons {
          padding: 0 20px 10px 20px;
          -webkit-column-count: 5;
          -moz-column-count: 5;
          column-count: 5;
          -webkit-column-gap: 20px;
          -moz-column-gap: 20px;
          column-gap: 20px;
      }

      div.icons div {
          line-height: 2em;
      }

      div.icons div span {
          cursor: pointer;
          font-size: 14px;
          text-overflow: ellipsis;
          display: inline-block;
          max-width: calc(100% - 90px);
          overflow: hidden;
          vertical-align: middle;
          white-space: nowrap;
      }

      div.icons div code:hover,
      div.icons div span:hover,
      div.icons div i:hover {
          color: #e13315;
      }

      div.icons div code:hover {
          border-color: #e13315;
      }

      div.icons div code {
          border: 1px solid #DDD;
          width: 46px;
          margin-left: 2px;
          margin-right: 4px;
          border-radius: 4px;
          display: inline-block;
          vertical-align: middle;
          text-align: center;
          line-height: 24px;
          cursor: pointer;
      }

      div.icons div i {
          display: inline-block;
          width: 32px;
          height: 24px;
          text-align: center;
          vertical-align: middle;
          cursor: pointer;
          line-height: 24px;
      }

      pre {
          margin: 0 20px;
          font-family: Consolas, monospace;
          padding: 10px;
          border: 1px solid #DDD;
          background: #F1F1F1;
      }

      blockquote {
          position: relative;
          margin: 1rem 1rem 0 1rem;
          padding: 0.5rem 0.5rem 0.5rem 0.75rem;
      }

      blockquote.note::before {
          content: ' ';
          width: 0.25rem;
          height: 100%;
          background: #DDD;
          position: absolute;
          border-radius: 0.25rem;
          top: 0;
          left: 0;
      }

      div.copied {
          position: fixed;
          top: 100px;
          left: 50%;
          width: 200px;
          text-align: center;
          color: #f80a25;
          background-color: #f3e2ec;
          border: 1px solid #d6e9c6;
          padding: 10px 15px;
          border-radius: 4px;
          margin-left: -100px;
          box-shadow: 0 0 10px rgba(128, 3, 3, 0.2);
      }

      div.examples {
          display: flex;
          flex-wrap: wrap;
          margin: 0.5rem 1.25rem;
      }

      div.examples > div {
          display: flex;
          margin-right: 0.5rem;
          margin-bottom: 0.5rem;
      }

      div.examples > div > div:first-child {
          display: flex;
          padding: 0.5rem;
          border-radius: 0.2rem;
          box-shadow: 0 0 0.25rem rgb(143, 4, 62);
          background: #FFF;
          z-index: 1;
          align-items: center;
          justify-content: center;
      }

      div.examples > div > div:first-child + div {
          display: flex;
          margin-left: -0.25rem;
          padding: 0.5rem 0.75rem 0.5rem 1rem;
          background: #ef1a73;
          border-radius: 0 0.25rem 0.25rem 0;
      }

      div.examples > div > div:first-child + div > code {
          color: #FFF;
          align-self: center;
      }

      div.examples i {
          display: flex;
      }

      div.examples-size > div > div:first-child {
          min-width: 3rem;
      }

      footer {
          display: flex;
          padding: 20px;
          color: #666;
          border-top: 1px solid #DDD;
          background: #F1F1F1;
      }

      footer > div:first-child {
          flex: 1;
      }

      footer > div:last-child {
          text-align: right;
      }

      footer a {
          color: #e91e63;
          text-decoration: none;
      }

      footer a:hover {
          text-decoration: underline;
      }
    </style>
    <link
      href="css/all.css?v={{ cacheString }}"
      media="all"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <h1>
      {{ brandIcon }} {{ fontName }}
      <span class="version">{{ version }}</span>
      <code id="npm" title="Copy to Clipboard">
        <svg viewBox="0 0 24 24">
          <path
            d="M19,20H5V4H7V7H17V4H19M12,2A1,1 0 0,1 13,3A1,1 0 0,1 12,4A1,1 0 0,1 11,3A1,1 0 0,1 12,2M19,2H14.82C14.4,0.84 13.3,0 12,0C10.7,0 9.6,0.84 9.18,2H5A2,2 0 0,0 3,4V20A2,2 0 0,0 5,22H19A2,2 0 0,0 21,20V4A2,2 0 0,0 19,2Z"
          />
        </svg>
        npm install {{ npmPackage }}
      </code>
    </h1>

    <h2 class="usage">Usage</h2>
    <pre><code id="font-usage">&lt;i class=&quot;{{ prefix }} {{ prefix }}-{{ icons[0].name }}&quot;&gt;&lt;/i&gt;</code></pre>

    <blockquote class="note">
      Click the icon, hex unicode, or name below to copy the value to your
      clipboard.
    </blockquote>

    <h2 class="icons">
      All Icons <small id="iconsCount">{{ icons | length }}</small>
    </h2>
    <div class="icons" id="icons">
      {% for name, properties in icons | dictsort %}
        {% if properties.styles %}
          {% for iconStyle in properties.styles %}
            <div>
              <i class="

                {{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ name }} {{ prefix }}-lg clipboard-copy"
                 data-code='<i class="

                   {{- prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ name }}"></i>'></i>
              <code class="clipboard-copy" data-code="{{ properties.unicode }}">{{ properties.unicode }}</code>
              <span class="clipboard-copy" data-code="

                {{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ name }}'">{{ prefix }}
                {%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ name }}</span>
            </div>
          {% endfor %}
        {% else %}
          <div>
            <i class="{{ prefix }} {{ prefix }}-{{ name }} {{ prefix }}-lg clipboard-copy"
               data-code='<i class="{{ prefix }} {{ prefix }}-{{ name }}"></i>'></i>
            <code class="clipboard-copy" data-code="{{ properties.unicode }}">{{ properties.unicode }}</code>
            <span class="clipboard-copy" data-code="{{ prefix }}-{{ name }}'">{{ prefix }}-{{ name }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% for _name, _properies in icons | dictsort %}
      {% if loop.first %}
        {% set firstIcon = _properies %}
        {% set iconStyle = firstIcon.styles[0] %}
        {% set name = _name %}


        <h2 class="extras">Extras</h2>

        <p class="extras">The helper CSS classes are listed below.</p>
        {% if 'sizing' in cssChoices %}
          <section>
            <h3>Size</h3>

            <div class="examples examples-size">
              {% set sizes = ["2xs", "sm", "1x", "lg", "2x", "3x", "5x"] %} {% for
                size in sizes %}
              <div>
                <div>
                  <i class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ size }} {{ prefix }}-{{ name }} clipboard-copy"
                     data-class="{{ prefix }}-{{ name }}"
                     data-code='<i class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ size }} {{ prefix }}-{{ name }}"></i>'></i>
                </div>
                <div>
                  <code class="clipboard-copy" data-class="{{ prefix }}-{{ name }}"
                        data-code="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-{{ size }} {{ prefix }}-{{ name }}">{{ prefix }}-{{ size }}</code>
                </div>
              </div>
            {% endfor %}
            </div>
          </section>
        {% endif %}

        {% if 'rotated-flipped' in cssChoices %}
          <section>
            <h3>Rotate</h3>

            <div class="examples">
              <div>
                <div>
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-lg {{ prefix }}-{{ name }}"
                    data-class="{{ prefix }}-{{ name }}"
                  ></i>
                </div>
              </div>
              {% set degrees = [90, 180, 270] %} {% for degree in degrees %}
              <div>
                <div>
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-lg {{ prefix }}-rotate-{{ degree }} {{ prefix }}-{{ name }} clipboard-copy"
                    data-class="{{ prefix }}-{{ name }}"
                    data-code='<i class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-rotate-{{ degree }} {{ prefix }}-{{ name }}"></i>'
                  ></i>
                </div>
                <div>
                  <code
                    class="clipboard-copy"
                    data-code="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-rotate-{{ degree }} {{ prefix }}-{{ name }}"
                    data-class="{{ prefix }}-{{ name }}"
                  >{{ prefix }}-rotate-{{ degree }}</code
                  >
                </div>
              </div>
            {% endfor %}
            </div>

            <h3>Flip</h3>

            <div class="examples">
              <div>
                <div>
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-lg {{ prefix }}-{{ name }}"
                    data-class="{{ prefix }}-{{ name }}"
                  ></i>
                </div>
              </div>
              {% set directions = ["horizontal", "vertical"] %} {% for direction in
                directions %}
              <div>
                <div>
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-lg {{ prefix }}-flip-{{ direction }} {{ prefix }}-{{ name }} clipboard-copy"
                    data-code='<i class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-flip-{{ direction }} {{ prefix }}-{{ name }}"></i>'
                    data-class="{{ prefix }}-{{ name }}"
                  ></i>
                </div>
                <div>
                  <code
                    class="clipboard-copy"
                    data-code="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-flip-{{ direction }} {{ prefix }}-{{ name }}"
                    data-class="{{ prefix }}-{{ name }}"
                  >{{ prefix }}-flip-{{ direction }}</code
                  >
                </div>
              </div>
            {% endfor %}
            </div>
          </section>
        {% endif %}

        {% if 'animated' in cssChoices %}
          <section>
            <h3>Spin</h3>

            <div class="examples">
              <div>
                <div>
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-3x {{ prefix }}-spin {{ prefix }}-{{ name }} clipboard-copy"
                    data-code='<i class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-spin {{ prefix }}-{{ name }}"></i>'
                    data-class="{{ prefix }}-{{ name }}"
                  ></i>
                </div>
                <div>
                  <code
                    data-code="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-spin {{ prefix }}-{{ name }}"
                    class="clipboard-copy"
                  >{{ prefix }}-spin</code
                  >
                </div>
              </div>
              <div>
                <div>
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-3x {{ prefix }}-pulse {{ prefix }}-{{ name }} clipboard-copy"
                    data-code='<i class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-pulse {{ prefix }}-{{ name }}"></i>'
                    data-class="{{ prefix }}-{{ name }}"
                  ></i>
                </div>
                <div>
                  <code
                    data-code="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-pulse {{ prefix }}-{{ name }}"
                    class="clipboard-copy"
                  >{{ prefix }}-pulse</code
                  >
                </div>
              </div>
            </div>
          </section>
        {% endif %}
          <section>
            <h3>Color</h3>

            <div class="examples">
              <div>
                <div style="background-color: red">
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-lg {{ prefix }}-inverse {{ prefix }}-{{ name }}"
                  ></i>
                </div>
                <div>
                  <code>{{ prefix }}-inverse</code>
                </div>
              </div>
              <div>
                <div style="color: red">
                  <i
                    class="{{ prefix }}{%- if iconStyle !="normal" %}-{{ iconStyle }}{% endif %} {{ prefix }}-lg {{ prefix }}-{{ name }}"
                  ></i>
                </div>
                <div>
                  <code>{{ prefix }}-{{ name }}</code>
                </div>
              </div>
            </div>
          </section>
      {% endif %}
    {% endfor %}
    <footer>
      <div>
        Generated with <a href="{{ url }}" target="_blank">{{ npmPackage }}</a>
      </div>
    </footer>

    <script type="text/javascript">
      function copyText(text) {
        let copyFrom = document.createElement("textarea");
        copyFrom.setAttribute(
          "style",
          "position:fixed;opacity:0;top:100px;left:100px;"
        );
        copyFrom.value = text;
        document.body.appendChild(copyFrom);
        copyFrom.select();
        navigator.clipboard.writeText(text);
        let copied = document.createElement("div");
        copied.setAttribute("class", "copied");
        copied.setAttribute("style", "z-index:1000!important;");
        copied.appendChild(document.createTextNode("Copied to Clipboard"));
        document.body.appendChild(copied);
        setTimeout(function () {
          document.body.removeChild(copyFrom);
          document.body.removeChild(copied);
        }, 1500);
      }

      (function () {
        const copiables = document.getElementsByClassName("clipboard-copy");
        for (let i = 0; i < copiables.length; i++) {
          copiables[i].addEventListener("mouseup", function (e) {
            copyText(e.target.dataset["code"]);
            document.getElementById("font-usage").innerText =
              e.target.parentNode.children[0].dataset["code"];
          });
        }

        document.getElementById("npm").addEventListener("click", function () {
          copyText("npm install {{ npmPackage }}");
        });
      })();
    </script>
  </body>
</html>
