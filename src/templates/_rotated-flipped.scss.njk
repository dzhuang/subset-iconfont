// rotating + flipping icons
// -------------------------

.#{${{ prefix }}-css-prefix}-rotate-90 {
  transform: rotate(90deg);
}

.#{${{ prefix }}-css-prefix}-rotate-180 {
  transform: rotate(180deg);
}

.#{${{ prefix }}-css-prefix}-rotate-270 {
  transform: rotate(270deg);
}

.#{${{ prefix }}-css-prefix}-flip-horizontal {
  transform: scale(-1, 1);
}

.#{${{ prefix }}-css-prefix}-flip-vertical {
  transform: scale(1, -1);
}

.#{${{ prefix }}-css-prefix}-flip-both,
.#{${{ prefix }}-css-prefix}-flip-horizontal.#{${{ prefix }}-css-prefix}-flip-vertical {
  transform: scale(-1, -1);
}

.#{${{ prefix }}-css-prefix}-rotate-by {
  transform: rotate(var(--#{${{ prefix }}-css-prefix}-rotate-angle, none));
}
