// sizing icons
// -------------------------

// literal magnification scale
@for $i from 1 through 10 {
  .#{${{ prefix }}-css-prefix}-#{$i}x {
    font-size: $i * 1em;
  }
}

// step-based scale (with alignment)
@each $size, $value in ${{ prefix }}-sizes {
  .#{${{ prefix }}-css-prefix}-#{$size} {
     @include {{ prefix }}-size($value);
  }
}
